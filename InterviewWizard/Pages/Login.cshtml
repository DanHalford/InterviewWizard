@page "/login"
@model InterviewWizard.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <div class="row">
        <div class="col-12 col-md-6 align-self-center">
            <div class="mb-3">
                <h1>Log in</h1>
            </div>
            <div class="mb-3">
                <label for="txtEmailAddress" class="form-label">Email address</label>
                <input type="email" class="form-control" id="txtEmailAddress" name="EmailAddress" required>
            </div>
            <div class="mb-3">
                <label for="txtPassword" class="form-label">Password</label>
                <input type="password" class="form-control" id="txtPassword" name="Password" required>
            </div>
            <div class="d-flex mb-3">
                <div class="align-self-center">
                    <a href="/register" aria-label="Sign up">Sign up</a>&nbsp;|&nbsp;<a href="/reset-password" aria-label="Forgot your password?">Forgot your password?</a>
                </div>
                <div class="ms-auto">
                    <button id="cmdSubmit" type="submit" class="btn btn-primary iw-100">Log in</button>
                    <button id="cmdWait" type="button" class="btn btn-primary iw-100 disabled d-none">
                        <span class="spinner-border spinner-border-sm" aria-hidden="true"></span>
                        <span class="visually-hidden" role="status">Loading...</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="col-6 iw-panel d-none d-md-block">
            <div class="text-end">
                <img src="/img/400/iw_wizard_1_400.webp" alt="A robot wizard sitting cross-logged on the floor, writing on a scroll" />
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div id="lblStatusAlert" class="alert alert-danger d-none" role="alert"></div>
    </div>
</div>

@section Scripts {
    <script src="/js/iw-login.js" asp-append-version="true"></script>
}
